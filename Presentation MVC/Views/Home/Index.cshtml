@{
    ViewData["Title"] = "Home";
}
@using Presentation_MVC.Models.Posting;
@model List<PostViewModel> 
<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @if (Model.Count > 0)
    {
        <p>All posts:</p>
        @foreach (PostViewModel post in Model)
        {
            <a asp-controller="Post" asp-action="ViewPost" asp-route-postId="@post.ID"><p>@post.Name</p></a>
        }
    } else
    {
        <p class="text-danger">ERROR: Failed to load posts.</p>
    }
    <a asp-controller="Post" asp-action="SelectCategory"><input value="Cick here to create your own post" type="button" /></a>
    <a asp-controller="Account" asp-action="Login">Log in</a>
</div>
